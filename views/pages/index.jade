div#wrapper(data-ng-init="init()")
 #game
  h1#event.hidden This is a test event
 #info
  button(ng-click="leave()" hidden) Leave
  button(ng-click="startgame()") Start
  ul#players
   h2 Players
   li(ng-repeat="player in players")
    span {{player.name}}
    span.pull-right READY!

div#highscore_modal.modal.fade(role='dialog')
    .modal-dialog
        .modal-content
            .modal-header
                h4.modal-title HighScores
            .modal-body
                table.table
                    head
                        td Player
                        td Total Points
                        td Total Games

                    tr(ng-repeat="score in highScores")
                        td(ng-bind="score.playerName")
                        td(ng-bind="score.score.totalPoints")
                        td(ng-bind="score.score.totalGames")
                .modal-footer
                    button.btn.btn-default(type='button', data-dismiss='modal', ng-click="restartGame()") Restart


